<header class="topbar">
  <h1>
    <img src="{{this.config.rootURL}}/assets/brand/icon-gradient-blue.svg" alt="" role="presentation">
    <span class="primary"><a href={{this.frontpageUrl}}>5apps</a></span>
    <span class="secondary">Storage</span>
  </h1>
  <nav>
    <ul>
      {{#if this.session.isAuthenticated}}
        {{#if this.currentUser.user}}
          <li>
            <BasicDropdown @horizontalPosition="right" as |dd|>
              <dd.Trigger>
                <IconLifeBuoy />
              </dd.Trigger>
              <dd.Content class="slide-fade">
                <div class="header">
                  <h4>Help</h4>
                </div>
                <ul>
                  <li>
                    <a href="https://5apps.tenderapp.com/kb/storage"
                       target="_blank" rel="noopener noreferrer">
                      <IconHelpCircle /> Knowledge Base
                    </a>
                  </li>
                  <li>
                    <a href="https://5apps.tenderapp.com/discussion/new"
                       target="_blank" rel="noopener noreferrer">
                      <IconMail /> Support
                    </a>
                  </li>
                  <li>
                    <a href="https://status.5apps.com/"
                       target="_blank" rel="noopener noreferrer">
                      <IconZap /> System Status
                    </a>
                  </li>
                  <li>
                    <a href="https://community.remotestorage.io/"
                       target="_blank" rel="noopener noreferrer">
                      <IconMessageCircle /> remoteStorage Community
                    </a>
                  </li>
                </ul>
              </dd.Content>
            </BasicDropdown>
          </li>
          <li class="account">
            <BasicDropdown @horizontalPosition="right" as |dd|>
              <dd.Trigger>
                <IconUser />
              </dd.Trigger>
              <dd.Content class="slide-fade">
                <div class="header">
                  <h4 class="small">User address</h4>
                  <p>
                    <span class="username">{{this.currentUser.user.username}}</span><span class="hostname">@{{this.currentUser.user.storageHost}}</span>
                  </p>
                </div>
                <ul>
                  <li>
                    <a href="https://{{this.baseDomain}}/account/settings"
                       target="_blank" rel="noopener noreferrer">
                      <IconSettings /> Account
                    </a>
                  </li>
                  <li>
                    <a href="#" rel="nofollow" {{on "click" (fn this.logout)}}>
                      <IconLogOut /> Log out
                    </a>
                  </li>
                </ul>
              </dd.Content>
            </BasicDropdown>
          </li>
        {{/if}}
      {{/if}}
    </ul>
  </nav>
</header>
